{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
  
    "compilerOptions": {
      "lib": ["es2021"],
      "module": "commonjs",
      "target": "es2021",
      "allowJs": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "dist",
      "declarationMap": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "exclude": [
        "node_modules/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*"
      ]
  }